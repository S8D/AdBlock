#!/bin/sh

[ -f /jffs/dns/.config ] && . /jffs/dns/.config

append_on_demand () {
  TARGET="$1"
  shift
  for LINE in "$@"; do
    if [ -z "`grep -F \"$LINE\" $TARGET`" ]; then
      echo "$LINE" >> $TARGET
    fi
  done
}

init_hwrng () {
  local COUNT=0
  while [ ! -c $RNG_DEV ]; do
    if [ $COUNT -gt 120 ]; then
      logger "ERROR: Unable to find HWRNG device. Aborting..."
      exit 1
    fi
    COUNT=$((COUNT+1))
    sleep 1
  done
  /jffs/dns/stty raw -echo -ixoff -F $RNG_DEV speed 115200
  /jffs/dns/rngd -r $RNG_DEV
  [ $? -eq 0 ] && logger "rngd: Started for $RNG_DEV"
}

start_dnscrypt () {
  DNSCRYPT_START="/jffs/dns/dns -syslog -config /jffs/dns/dns.toml"
  killall -q dns
  logger "Start DNSCrypt-Proxy"
  cd /jffs/dns
  nohup $DNSCRYPT_START >/dev/null 2>&1 </dev/null &
}

start_monitor () {
  trap "" 1
  while [ `nvram get ntp_ready` -eq 0 ]; do sleep 1; done
  local NW_STATE
  local RES_STATE
  local COUNT=0
  while true; do
    if [ -f /jffs/dns/localtime ]; then
      if [ $COUNT -eq 90 ]; then
        COUNT=0
        touch "$0"
      fi
      COUNT=$((COUNT + 1))
    fi
    ping 1.1.1.1 -c1 -W2 >/dev/null 2>&1
    NW_STATE=$?
    nslookup google.com >/dev/null 2>&1
    RES_STATE=$?
    if [ -f /jffs/dns/dns ]; then
      if [ -z "`pidof dns`" ]; then
        logger "Warning: DNSCrypt-Proxy is dead"
        start_dnscrypt
      elif [ $NW_STATE -eq 0 ] && [ $RES_STATE -ne 0 ]; then
        logger "Warning: DNSCrypt-Proxy is not responding"
        start_dnscrypt
      fi
    fi
    sleep 10
  done
}

update_opendns () {
  if [ -z "$OPENDNS_USER" ] || [ -z  "$OPENDNS_PASSWORD" ] || [ $1 -gt 2 ]; then
    return
  fi
  sleep 5
  RET=`curl -k -s -u "$OPENDNS_USER:$OPENDNS_PASSWORD" "https://updates.opendns.com/nic/update?hostname="`
  case "$RET" in
    good*)
      logger "OpenDNS: Update IP succeeded"
      ;;
    badauth*)
      logger "OpenDNS: Wrong username or password"
      ;;
    *)
      logger "OpenDNS: Received error $RET"
      update_opendns $(($1+1))
      ;;
  esac
}

unset TZ
case $1 in
  dnscrypt-start)
    start_dnscrypt
    ;;
  dnsmasq)
    append_on_demand /etc/dnsmasq.conf "no-resolv" "listen-address=127.0.0.1"
    append_on_demand /tmp/resolv.dnsmasq "server=127.0.0.1#65053"
    if [ "$(nvram get dns_local_cache)" = "1" ]; then
      for DNS in $(nvram get wan_dns); do
      sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      done
      for DNS in $(nvram get ipv6_get_dns); do
      sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      done
      for VAR in 1 2 3; do
      DNS="$(nvram get "ipv6_dns$VAR")"
      [ -n "$DNS" ] && sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      done
     else
      for DNS in $(nvram get wan_dns); do
      sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      sed -i "/^nameserver $DNS.*$/d" /tmp/resolv.conf
      sed -i "/^nameserver $DNS.*$/d" /etc/resolv.conf
      append_on_demand /etc/resolv.conf "nameserver 127.0.0.1" "nameserver $DNS"
      append_on_demand /tmp/resolv.conf "nameserver 127.0.0.1" "nameserver $DNS"
      done
      for DNS in $(nvram get ipv6_get_dns); do
      sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      done
      for VAR in 1 2 3; do
      DNS="$(nvram get "ipv6_dns$VAR")"
      [ -n "$DNS" ] && sed -i "/^server=$DNS.*$/d" /tmp/resolv.dnsmasq
      done
     fi
    ;;
  fw-rules)
    iptables -t nat -C  PREROUTING -i br0 -p udp --dport 53 -j DNAT --to $(nvram get lan_ipaddr) > /dev/null 2>&1
    [ $? -ne 0 ] && iptables -t nat -A PREROUTING -i br0 -p udp --dport 53 -j DNAT --to $(nvram get lan_ipaddr)
    iptables -t nat -C PREROUTING -i br0 -p tcp --dport 53 -j DNAT --to $(nvram get lan_ipaddr) > /dev/null 2>&1
    [ $? -ne 0 ] && iptables -t nat -A PREROUTING -i br0 -p tcp --dport 53 -j DNAT --to $(nvram get lan_ipaddr)
    ;;
  init-start)
    if [ -f /jffs/dns/localtime ]; then
      ln -s /jffs/dns/localtime /etc/localtime
      date -u -s "`date -u -r \"$0\" '+%Y-%m-%d %H:%M:%S'`"
    fi
    case $RAN_PRV in
      haveged)
        /jffs/dns/haveged -w1024 -v1
        ;;
      rngd)
        init_hwrng &
        ;;
    esac
    $0 monitor-start
    start_dnscrypt
    ;;
  monitor-start)
    start_monitor &
    ;;
  services-stop)
    [ -f /jffs/dns/localtime ] && touch "$0"
    ;;
  wan-start)
    update_opendns 0 &
    ;;
esac
